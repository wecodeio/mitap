<div class="show_container">
  <div class="show_core_container">
    <div class="alert alert-light" role="alert">
     <%= notice %>
    </div>
    <div class="form-group">
      <label>Nombre del grupo de evento:</label>
      <div class="show_container_target">
       <h5>
         <%= @event_group.name  %>
       </h5> 
     </div>
   </div>
 </div>
</div>

<div class="tag_index">
  <h5>Listado de inscriptos al grupo</h5>
</div>
<div class="show_container">
  <div class="show_core_container">
      <div class="form-group text-center">
        <ul class="list-group">
          <% @event_group.users.each do |user| %>
          <li class="list-group-item">
            <p><%= user.email %></p>
            <%= button_to "Nuevo evento", { action: "newEvent_email", email: user.email }, method: :post %>
          </li>
          <% end %>
        </ul>
      </div>
  </div>
</div>

<div class="button_align_right">
  <%= link_to 'Atras', admin_event_groups_path, class: 'btn btn-secondary'%>
</div>
