<div class="tag_index">
  <h5>Grupos de eventos existentes </h5>
</div>
<div class="alert alert-light" role="alert">
  <%= notice %>
</div>
<ul class="list-group">
  <% @event_groups.each do |event_group| %>
  <li class="list-group-item">
    <div class="left_container">
      <div class="form-group">
        <h5><%= event_group.name %></h5>
      </div>
    </div>
    <div class="right_container">
      <%= link_to 'Características e inscriptos', admin_event_group_path(event_group), class: 'btn btn-light btn-sm btn-lg btn-block'%>
      <%= link_to 'Editar', edit_admin_event_group_path(event_group), class: 'btn btn-light btn-sm btn-lg btn-block' %>
      <%= link_to 'Borrar', admin_event_group_path(event_group), method: :delete, data: { confirm: 'Estás seguro que querés eliminar el grupo de evento de la lista?' }, class: 'btn btn-light btn-sm btn-lg btn-block' %>
    </div>
  </li>
  <% end %>
</ul>

<div class="button_align_right">
  <%= link_to 'Nuevo grupo de evento', new_admin_event_group_path, class: 'btn btn-dark' %>
</div>
