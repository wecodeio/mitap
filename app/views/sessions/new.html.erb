<div class="focuded_content">
	<div class="show_core_container_logue">
		<div class="tag_index_logue d-flex">
			<h4>Ingresar</h4>
		</div>

		<%= form_tag sessions_path do %>

		<div class="form_group">
			<%= label_tag :email %><br>
			<%= text_field_tag :email, params[:email], class: 'form-control' %> <br>
		</div>
		<div class="form_group">
			<%= label_tag :password %> <br>
			<%= password_field_tag :password, class: 'form-control'%>
		</div>
		<div class="button_align_right_logue">
			<%= submit_tag "Ingresar",  class: "button btn"%>
		</div>
		<% end %>
	</div>
</div>