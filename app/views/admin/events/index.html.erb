<div class="tag_index">
  <h5>Eventos existentes</h5>
</div>
<div class="notice_index">
  <p id="notice"><%= notice %></p>
</div>
<ul class="list-group">
  <% @events.each do |event| %>
  <li class="list-group-item">
    <div class="left_container">
      <div class="form-group">
        <h5><%= event.name %></h5>
      </div>
      <div class="form-group">
        <p>Fecha: <%= event.event_date %></p>
        <p>Horario: <%= event.start_hour %> a <%= event.end_hour %>.</p>
        <p>Lugar: <%= event.place %>. </p>
        <p>Grupo de evento: <%= event.event_group.try(:name) %></p>
      </div>
    </div>
    <div class="right_container">
      <%= link_to 'Mostrar', admin_event_path(event), class: 'btn btn-light btn-sm btn-lg btn-block'%>
      <%= link_to 'Editar', edit_admin_event_path(event), class: 'btn btn-light btn-sm btn-lg btn-block' %>
      <%= link_to 'Borrar', admin_event_path(event), method: :delete, data: { confirm: 'Estás seguro que querés eliminar el evento de la lista?' }, class: 'btn btn-light btn-sm btn-lg btn-block' %>
    </div>
 </li>
 <% end %>
</ul>

<div class="button_align_right">
  <%= link_to 'Nuevo evento', new_admin_event_path, class: 'btn btn-dark' %>
</div>
