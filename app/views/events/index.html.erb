<div class="tag_index_events">
  Pr√≥ximos eventos
</div>

<ul class="list-group">
  <% @events.each do |event| %>
  <li class="list-group-item">
    <div class="right_container">
      <div class="form-group">
        <h5><%= event.name %></h5>
      </div>
      <div class="form-group">
        <p>Fecha: <%= event.event_date %></p>
        <p>Horario: <%= event.start_hour %> a <%= event.end_hour %>.</p>
        <p>Lugar: <%= event.place %>. </p>
        <p>Grupo de evento: <%= event.event_group.try(:name) %></p>
      </div>
    </div>
    <div class="left_container">
      <%= link_to 'Ver Evento', event_path(event), class: 'btn btn-light btn-sm btn-lg btn-block' %>
    </div>
  </li>
  <% end %>
</ul>

<div class="tag_index_events">
  Grupos
</div>

<ul class="list-group">
  <% @event_groups.each do |group| %>
  <li class="list-group-item">
    <div class="right_container">
      <div class="form-group">
        <%= group.name %>
      </div>
    </div>
    <div class="left_container">
      <%= link_to 'Mostrar', event_group_path(group), class: 'btn btn-light btn-sm btn-lg btn-block' %>
    </div>
  </li>
  <% end %>
</ul>
